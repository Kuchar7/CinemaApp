@model CinemaApp.MVC.ViewModels.AddGenreVM

<main>
    <div class="container-fluid mx-0 px-0">
        <div class="reserving-movie-image ">
            <p class="display-1">Nowy gatunek filmowy</p>
        </div>
        @if (TempData != null)
        {
            Html.RenderPartial("_SuccessAlertPartial");
        }
    </div>



    <div class="d-flex justify-content-center row">

        @using (Html.BeginForm("AddGenre", "Admin", FormMethod.Post, new { @class = " col-lg-6 col-xl-6 justify-content-center row mt-3", role = "form" }))

        {
            @Html.AntiForgeryToken()

            <div class="input-group input-group-lg mb-6 col-md-6 col-lg-6">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-video"></i>
                    </span>
                </div>
                @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control", @placeholder = "Nazwa gatunku" })
                <div class="my-2 col-12 text-center">
                    <button type="submit" class="btn btn-warning my-3 sbm">Dodaj</button>
                </div>
                @Html.ValidationSummary("", new { @class = "text-danger" })


            </div>
        }
    </div>
</main>
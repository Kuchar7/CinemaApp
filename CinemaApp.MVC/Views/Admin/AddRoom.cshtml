@model CinemaApp.MVC.ViewModels.AddRoomVM

<main>
    <div class="container-fluid mx-0 px-0">
        <div class="reserving-movie-image ">
            <p class="display-1">Nowa sala kinowa</p>
        </div>
    </div>



    <div class="d-flex justify-content-center row">

        @using (Html.BeginForm("AddRoom", "Admin", FormMethod.Post, new { @class = " col-lg-6 col-xl-6 justify-content-center row mt-3", role = "form" }))

        {
            @Html.AntiForgeryToken()

            <div class="input-group input-group-lg mb-3 col-md-4 col-lg-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="far fa-clock"></i>
                    </span>
                </div>
                @Html.EditorFor(Model => Model.RoomNumber, new
           {
               
               htmlAttributes = new
               {
                   @data_toggle = "tooltip",
                   @class = "form-control",
                   @title = "Numer sali",
                   @Value = "0"


               }
           })
            </div>
            <div class="input-group input-group-lg mb-3 col-md-4 col-lg-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="far fa-clock"></i>
                    </span>
                </div>
                @Html.EditorFor(Model => Model.Capacity, new
           {

               htmlAttributes = new
               {
                   @data_toggle = "tooltip",
                   @class = "form-control",
                   @title = "Pojemnośc sali",
                   @Value = "0"


               }
           })
            </div>


            <div class="my-2 col-12 text-center">
                <button type="submit" class="btn btn-warning my-3 sbm">Dodaj</button>
            </div>
            @Html.ValidationSummary("", new { @class = "text-danger" })


        }
    </div>
</main>

<script>
    $(document).ready(function () {

        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

    });

</script>
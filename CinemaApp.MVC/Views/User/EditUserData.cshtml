@model CinemaApp.MVC.ViewModels.EditUserDataVM

@{
    ViewBag.Title = "EditUserData";
}

<main>
    <div class="container-fluid mx-0 px-0">
        <div class="reserving-movie-image ">
            <p class="display-1">Zmiana danych</p>
        </div>
    </div>

    <div class="d-flex justify-content-center row mt-5">
        @using (Html.BeginForm("EditUserData", "User", FormMethod.Post, new { @class = "row col-lg-12 col-xl-9 justify-content-center", @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="input-group input-group-lg mb-3 col-md-4 col-lg-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-at"></i>
                    </span>
                </div>
                @Html.TextBoxFor(Model => Model.EmailAddress, new { @class = "form-control", @data_toggle = "tooltip", @title = "Adres Email", @readonly = true })
            </div>
            <div class="input-group input-group-lg mb-3 col-md-4 col-lg-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-signature"></i>
                    </span>
                </div>
                @Html.TextBoxFor(Model => Model.FirstName, new { @class = "form-control", @title = "Imie", @data_toggle = "tooltip", })
            </div>
            <div class="input-group input-group-lg mb-3 col-md-4 col-lg-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-signature"></i>
                    </span>
                </div>
                @Html.TextBoxFor(Model => Model.LastName, new { @class = "form-control", @title = "Nazwisko", @data_toggle = "tooltip", })
            </div>


            <div class="ml-1 mt-1">
                @Html.ValidationSummary(false, "", new { @class = "text-danger ml-5" })
            </div>
            <div class="my-2 col-12 text-center">
                <button type="submit" class="btn btn-outline-dark submit-btn px-4">Dodaj</button>
            </div>
        }
    </div>
</main>
<script>
    $(document).ready(function () {

        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

    });

</script>

@model CinemaApp.MVC.ViewModels.ContactVM

<main>
    <div class="container-fluid mx-0 px-0">
        <div class="reserving-movie-image ">
            <p class="display-1">Kontakt</p>
        </div>
        @if (TempData != null)
        {
            Html.RenderPartial("_SuccessAlertPartial");
        }
    </div>



    <div class="d-flex justify-content-center row">

        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = " justify-content-center row mt-3", role = "form" }))

        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="input-group input-group-lg">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-at"></i>
                    </span>
                </div>
                @Html.TextBoxFor(Model => Model.UserEmail, new { @class = "form-control", @placeholder = "Adres email" })
                <div class="input-group input-group-lg mt-3">
                </div>
                @Html.TextAreaFor(Model => Model.Message, new { @class = "form-control", @placeholder = "Treść wiadomości.....", @rows = "10" })
                <div class="my-2 col-12 text-center">
                    <button type="submit" class="btn btn-warning my-3 sbm">Wyślij</button>
                </div>



            </div>
        }
    </div>
</main>
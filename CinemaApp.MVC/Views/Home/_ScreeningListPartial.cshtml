@model List<CinemaApp.DTO.ScreeningDisplayDTO>

@if (Model != null && Model.Count() > 0)
{
    foreach (var screening in Model)
    {
        <div class="col-4">
            <div class="film-offer">
                <a href="@Url.Action("AddReservation", "Reservation", new { id = screening.Id }, null)">
                    <img class="offer-film-image" src="@Url.Content(screening.ImgPath)" alt="@screening.MovieTitle" style="width:100%">
                    <p class="offer-film-title">@screening.MovieTitle</p>
                    <p class="offer-film-title">@screening.Start</p>
                </a>
            </div>
        </div>

    }
}
else
{
    <div class="container justify-content-center mt-5">
        <p class="display-4 text-muted text-center text font-weight-light font-italic">Brak seansów spełniających kryteria</p>
    </div>
}

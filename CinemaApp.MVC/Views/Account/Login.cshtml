@model CinemaApp.MVC.ViewModels.UserLoginVM


<main>
    <div class="container-fluid mx-0 px-0">
        <div class="reserving-movie-image ">
            <p class="display-1">Logowanie</p>
        </div>
    </div>
    <div class="d-flex justify-content-center row">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "col-lg-6 col-xl-6 justify-content-center row  mt-3", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="input-group input-group-lg mb-3 col-md-4 col-lg-6 di">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-at"></i>
                    </span>
                </div>
                @Html.TextBoxFor(Model => Model.EmailAddress, new { @class = "form-control", @placeholder = "Adres E-mail" })
            </div>
            <div class="input-group input-group-lg mb-3 col-md-4 col-lg-6">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fas fa-key"></i>
                    </span>
                </div>
                @Html.PasswordFor(Model => Model.Password, new { @class = "form-control", @placeholder = "Hasło" })
            </div>
            @*<div class="input-group input-group-lg mb-3 col-md-4 col-lg-12 justify-content-center row mt-2">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>*@
            <div class="my-2 col-12 text-center">
                <button type="submit" class="btn btn-warning my-1 sbm">Zaloguj</button>
            </div>
            @Html.ValidationSummary("", new { @class = "text-danger" })
        }
    </div>
</main>